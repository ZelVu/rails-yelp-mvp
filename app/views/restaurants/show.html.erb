<div class ='container'>
<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p>Rating: <%= review.rating %></p>
<% end %>


<%= link_to 'Back to all restaurants', restaurants_path  %>

<%= link_to 'Update this restaurant', edit_restaurant_path(@restaurant) %>

<%= link_to 'Delete restaurant', restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure you want to delete?"}   %>

<%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %>
</div>